generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id        Int      @id @default(autoincrement())
  location  String
  contact   String
  gender    String
  breed     String
  size      String
  type      String  
  color     String
  name      String
  url       String
  found     Boolean
  shelterId Int      
  Shelter   Shelter  @relation(fields: [shelterId], references: [id])
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  phone String
  email String @unique
  role  Role
}

model Shelter {
  id          Int    @id @default(autoincrement())
  location    String
  name        String
  email       String @unique
  phone       String
  capacity    Int
  occupation  Int
  description String
  needs       String
  Pets        Pet[]
}

enum Role {
  admin
  volunteer
}